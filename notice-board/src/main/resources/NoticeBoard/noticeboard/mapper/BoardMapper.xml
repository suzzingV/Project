<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "NoticeBoard.noticeboard.mapper.BoardMapper">

    <select id="boardCount" resultType = "int">
        SELECT count(boardId) AS cnt FROM tbl_board;
    </select>

    <select id = "getList" resultType="NoticeBoard.noticeboard.domain.Board">
        SELECT
        *
        FROM tbl_board;
    </select>

    <select id = "getBoard" parameterType="Long" resultType="NoticeBoard.noticeboard.domain.Board">
        SELECT
        *
        FROM tbl_board
        where boardId=#{boardId};
    </select>
</mapper>