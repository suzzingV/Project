<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "NoticeBoard.noticeboard.mapper.BoardMapper">

    <select id="boardCount" resultType = "int">
        SELECT count(boardId) AS cnt FROM tbl_board;
    </select>

    <select id = "getList" resultType="NoticeBoard.noticeboard.domain.Board">
        SELECT
        *
        FROM tbl_board;
    </select>

    <insert id="uploadBoard" parameterType="com.example.blog.board.domain.Board">
        INSERT INTO tbl_board (title, content, name)
        VALUES
            (#{title}, #{content}, #{name}});
    </insert>
</mapper>